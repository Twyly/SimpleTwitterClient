<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_base_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="@dimen/profile_image_view_length"
        android:minHeight="@dimen/profile_image_view_length"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUsername"
        android:layout_alignTop="@id/ivImage"
        android:lines="1"
        android:layout_toRightOf="@+id/ivImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:lines="1"
        android:id="@+id/tvScreenname"
        android:layout_alignLeft="@id/tvUsername"
        android:layout_alignStart="@id/tvUsername"
        android:layout_toRightOf="@+id/ivImage"
        android:layout_toEndOf="@id/ivImage"
        android:layout_below="@+id/tvUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTweet"
        android:layout_below="@+id/ivImage"
        android:layout_alignStart="@id/ivImage"
        android:layout_alignLeft="@id/ivImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTimestamp"
        android:layout_alignLeft="@id/tvTweet"
        android:layout_alignStart="@id/tvTweet"
        android:layout_below="@+id/tvTweet"
        android:layout_alignRight="@+id/tvTweet"
        android:layout_alignEnd="@+id/tvTweet" />


</RelativeLayout>